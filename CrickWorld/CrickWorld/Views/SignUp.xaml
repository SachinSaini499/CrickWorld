<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrickWorld.Views.SignUp"
             xmlns:viewModel="clr-namespace:CrickWorld.ViewModel;assembly=CrickWorld">
    <ContentPage.BindingContext>
        <viewModel:UserViewModel/>
    </ContentPage.BindingContext>
    
	<StackLayout>
        <Entry Placeholder="UserNmae" Text="{Binding }"></Entry>
        <Entry   Placeholder="Password"></Entry>
        <Entry  Placeholder="Phone Number" ></Entry>
        <Button Text="Submit" Clicked="Button_OnClicked"></Button>

    </StackLayout>
</ContentPage>